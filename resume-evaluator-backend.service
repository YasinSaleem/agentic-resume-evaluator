[Unit]
Description=Resume Evaluator Backend API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/agentic-resume-evaluator/backend
Environment=PATH=/home/ubuntu/agentic-resume-evaluator/backend/venv/bin
ExecStart=/home/ubuntu/agentic-resume-evaluator/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
